    "document_directory = \"Sample_documents\"\n",
    "documents = os.listdir(document_directory)\n",
    "documents = [os.path.join(document_directory, doc) for doc in documents]\n",
    "print(\"Documents are: \", documents)\n",
    "\n",
    "##Loading the Documents using on of the Langchain's PDF Parsers\n",
    "docs = [PyMuPDFLoader(document).load() for document in documents]\n",
    "docs_list = [item for sublist in docs for item in sublist]\n",
    "\n",
    "print(\"Document list: \", docs_list)\n",
    "\n",
    "##Initiating the Text Splitter provided by Langchain\n",
    "text_splitter = RecursiveCharacterTextSplitter.from_tiktoken_encoder(chunk_size=1000, chunk_overlap=200)\n",
    "\n",
    "##Splitting the Documents into Chunks of the relative size\n",
    "doc_chunks = text_splitter.split_documents(docs_list)\n",
    "\n",
    "##Creating the Vectors and Saving in a Vector Store/Space\n",
    "vector_store = Chroma.from_documents(\n",
    "    documents = doc_chunks, collection_name = \"Bhagvad_Gita\", embedding = GoogleGenerativeAIEmbeddings(model=\"models/embedding-001\") \n",
    ")\n",
    "\n",
    "##Creating a Retriever instance to retrieve the Documents\n",
    "retriever = vector_store.as_retriever(search_kwargs = {\"k\": 4})\n"
   ]
