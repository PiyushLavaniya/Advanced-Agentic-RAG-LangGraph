    "##Creating the Nodes\n",
    "def agent(state):\n",
    "    \"\"\"Agent responsible for retrieving based on the question asked.\n",
    "    It will decide to retrieve using the retriever tool based on the query or else end.\n",
    "\n",
    "    Args:\n",
    "        state (messages): The current state\n",
    "    \"\"\"\n",
    "    \n",
    "    print(\"CALLING AGENT---\")\n",
    "    \n",
    "    ##Getting the messages from the current state\n",
    "    messages = state[\"messages\"]\n",
    "    \n",
    "    ##Instantiating the LLM\n",
    "    llm = ChatGroq(model=\"llama-3.1-70b-versatile\", temperature=0)\n",
    "    \n",
    "    ##Binding the LLM with the tools\n",
    "    llm_with_tools = llm.bind_tools(tools)\n",
    "    \n",
    "    ##Getting the response from the LLM\n",
    "    response = llm_with_tools.invoke(messages)\n",
    "    \n",
    "    ##Returning a list and simply appending it to the state of the messages\n",
    "    return {\"messages\": [response]}\n",
    "    "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 146,
   "metadata": {},
   "outputs": [],
   "source": [
    "##Rewriting Node\n",
    "def rewrite(state):\n",
    "    \"\"\"Responsible for rewriting the query into a better query\n",
    "\n",
    "    Args:\n",
    "        state (messages): The current state\n",
    "    \"\"\"\n",
    "    \n",
    "    print(\"TRANSFORMING QUERY---\")\n",
    "    \n",
    "    ##Getting the Messages\n",
    "    messages = state[\"messages\"]\n",
    "    \n",
    "    ##Getting the question\n",
    "    question = messages[0].content\n",
    "    \n",
    "    ##Creating a list of messages to pass to the LLM for inference (simply writing the prompt)\n",
    "    msg = [\n",
    "        HumanMessage(content=f\"\"\" \\n\n",
    "    Look at the input and try to reason about the underlying semantic intent / meaning. \\n \n",
    "    Here is the initial question:\n",
    "    \\n ------- \\n\n",
    "    {question} \n",
    "    \\n ------- \\n\n",
    "    Formulate an improved question:\"\"\")\n",
    "    ]\n",
    "    \n",
    "    ##Calling the LLM\n",
    "    llm = ChatGroq(model=\"llama-3.1-70b-versatile\", temperature=0)\n",
    "    transformed_query = llm.invoke(msg)\n",
    "    \n",
    "    ##Returninf the list and appending it to the state\n",
    "    return {\"messages\": [transformed_query]}\n",
    "    "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 147,
   "metadata": {},
   "outputs": [],
   "source": [
    "##Node to generate the final response\n",
    "def generate(state):\n",
    "    \"\"\"Generate the final answer taking in the question and the context: docs.\n",
    "\n",
    "    Args:\n",
    "        state (messages): The current state\n",
    "    \"\"\"\n",
    "    \n",
    "    print(\"GENERATING---\")\n",
    "    \n",
    "    messages = state[\"messages\"]\n",
    "    \n",
    "    ##Getting the last_message\n",
    "    last_message = messages[-1]\n",
    "    \n",
    "    ##Getting the question\n",
    "    question = messages[0].content\n",
    "    \n",
    "    ##Getting the docs/context\n",
    "    docs = last_message.content\n",
    "    \n",
    "    ##Gettingthe Prompt from Langchain Hub\n",
    "    rag_prompt = hub.pull(\"rlm/rag-prompt\")\n",
    "    \n",
    "    ##Instantiating the LLM\n",
    "    llm = ChatGroq(model=\"llama-3.1-70b-versatile\", temperature=0)\n",
    "    \n",
    "    ##Post Processing\n",
    "    def format_docs(docs):\n",
    "        return \"\\n\\n\".join([doc.page_content for doc in docs])\n",
    "    \n",
    "    ##Rag Chain\n",
    "    rag_chain = rag_prompt | llm | StrOutputParser()\n",
    "    \n",
    "    ##Invoking the RAG Chain\n",
    "    response = rag_chain.invoke({\"context\": docs, \"question\": question})\n",
    "    \n",
    "    ##Returning and Appending to the State\n",
    "    return {\"messages\": [response]}\n",
    "    "
   ]
